# Mock OTA Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# OTA API Simulation Settings
AIRBNB_API_DELAY_MS=100
BOOKING_API_DELAY_MS=150
EXPEDIA_API_DELAY_MS=200
AGODA_API_DELAY_MS=120
VRBO_API_DELAY_MS=180

# Error Simulation (0-100, percentage of requests that should fail)
ERROR_SIMULATION_RATE=5

# WebSocket Configuration
WEBSOCKET_PORT=3002

# Mock Data Configuration
MOCK_DATA_SIZE=1000
MOCK_PROPERTIES_COUNT=50
MOCK_BOOKINGS_COUNT=200

# API Response Delays (in milliseconds)
MIN_RESPONSE_DELAY=50
MAX_RESPONSE_DELAY=500

# Authentication (for testing webhook endpoints)
WEBHOOK_SECRET=your-webhook-secret-here
API_KEY_SECRET=your-api-key-secret-here

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE_MB=10
UPLOAD_MAX_FILES=5
UPLOAD_ALLOWED_MIMETYPES=image/jpeg,image/png,application/pdf

# Database Simulation (in-memory storage)
DATA_PERSISTENCE=false
DATA_BACKUP_INTERVAL=3600000

# Performance Testing
ENABLE_PERFORMANCE_METRICS=true
METRICS_COLLECTION_INTERVAL=60000


